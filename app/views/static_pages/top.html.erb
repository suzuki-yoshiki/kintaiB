<% provide(:title, "Top") %>
<div class="center jumbotron">
    <h1>勤怠システム</h1>
    <% if logged_in? %>
        <%= submit_tag "ログイン状態です", class: "btn btn-primary btn-block btn-form", disabled: "disabled" %>
    <% else %>
        <%= link_to "ログイン", login_path, class: "btn btn-lg btn-primary" %>
    <% end %>
    <p>アカウント作成は<%= link_to "こちら", signup_path %>から</p>
</div>