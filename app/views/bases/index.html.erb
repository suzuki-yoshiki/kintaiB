<% provide(:title, 'All Bases') %>
<h1>拠点一覧</h1>

<div>
  <table class="table table-bordered table-condensed user-table">
   <thead>
      <tr>
        <td>編集</td>
        <td>削除</td>
        <td>拠点名</td>
        <td>拠点番号</td>
        <td>勤怠種類</td>
      </tr>
   </thead>
   <tbody>
      <% @bases.each do |base| %>
      <tr>
        <td><%= link_to "編集", edit_basis_path(base), class: "btn btn-primary" %></td>
        <td><%= link_to "削除", basis_path(id:base.id), method: :delete,
                data: { confirm: "削除しますか？" }, class: "btn btn-danger" %></td>
        <td><%= base.base_name %></td>
        <td><%= base.base_number %></td>
        <td><%= base.base_type %></td>
      </tr>
    <% end %>
   </tbody>
  </table>
</div>

<div>
  <%= link_to "拠点情報追加", new_basis_path, class: "btn btn-primary" %>
</div>
