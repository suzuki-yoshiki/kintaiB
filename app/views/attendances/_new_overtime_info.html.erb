<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= form_with(model: @user, url: new_overtime_info_user_attendance_path(@attendance), local: true, method: :patch) do |f| %>
     <% @user.each do |user| %>
    <h1 class="modal-title">【<%= user.name %>からの残業申請】</h1>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <table class="table table-bordered table-condensed user-table">
           <thead> 
            <tr>
              <td>日付</td>
              <td>曜日</td>
              <td>終了予定時間</td>
              <td>指定勤務終了時間</td>
              <td>時間外時間</td>
              <td>業務処理内容</td>
              <td>指示者確認</td>
              <td>変更</td>
              <td>勤怠を確認</td>
            </tr>
           </thead>
           <% @attendance.each do |a| %>
            <%= f.fields_for "attendances[]", a do |attendance| %>
             <% if attendance.user_id == user.id %>
           <tbody>
            <tr>
              <td><%= l(@attendance.worked_on, format: :short) %></td>
              <td><%= $days_of_the_week[@attendance.worked_on.wday] %></td>
              <td><%= l(@attendance.finished_plan_at, format: :time) %></td>
              <td><%= user.designated_work_end_time %></td>
              <td><%= working_times(user.designated_work_end_time.floor_to(15.minutes), a.finished_plan_at.floor_to(15.minutes)) %></td>
              <td><%= a.business_process_content %></td>
              <td><%= f.select :mark_instructor_confirmation, Attendance.mark_instructor_confirmations.keys.to_a, { include_blank: true } %></td>
              <td><%= f.check_box :change, id: "remember-me" %></td>
              <td><%= link_to "確認", "#", class: "btn btn-primary" %></td>
            </tr>
            <% end %>
            <% end %>
            <% end %>
           </tbody>
          </table>
          <% end %>
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>