<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <div class="btn-users-show">
          <%= l(@first_day, format: :middle) %>時間管理表
        </div>
      </td>
      <td>指定勤務開始時間  <%= l(@user.designated_work_start_time, format: :time) %>
      <br>指定勤務終了時間  <%= l(@user.designated_work_end_time, format: :time) %>
      </td>
      <td colspan = "3">基本時間  <%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日 : <%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.employee_number %></td>
      <td>出勤日数 : <%= @worked_sum %>日</td>
      
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "11">実績</th>
        <th colspan = "8">所定外勤務</th>
      </tr>
      <tr>
        <th colspan = "3">出勤時間</th>
        <th colspan = "3">退勤時間</th>
        <th rowspan = "3" colspan = "4">在社時間</th>
        <th rowspan = "3">備考</th>
        <th colspan = "2">終了予定時間</th>
        <th rowspan = "2" colspan = "2">時間外時間</th>
        <th rowspan = "2" colspan = "2">業務処理内容</th>
        <th rowspan = "2" colspan = "2">指示者確認</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody>
       <% @attendances.each do |day| %>
        <tr>
          <td></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 6 %>
              <font color="blue">土</font>
            <% elsif day.worked_on.wday == 0 %>
              <font color="red">日</font>
            <% elsif day.worked_on.wday == 1 %>
              <font color="black">月</font>
            <% elsif day.worked_on.wday == 2 %>
              <font color="black">火</font>
            <% elsif day.worked_on.wday == 3 %>
              <font color="black">水</font>
            <% elsif day.worked_on.wday == 4 %>
              <font color="black">木</font>
            <% elsif day.worked_on.wday == 5 %>
              <font color="black">金</font>
            <% end %>            
          </td>
          <td>
            <% if day.started_before_at.present? && day.started_at.blank? %>
             <%= l(day.started_before_at, format: :hour) %>
            <% elsif day.started_at.present? %>
             <%= l(day.started_at, format: :hour) %>
            <% end %>
          </td>
          <td>
            <% if day.started_before_at.present? && day.started_at.blank? %>
             <%= format_min(day.started_before_at)  %>
            <% elsif day.started_at.present? %>
             <%= format_min(day.started_at) %>
            <% end %>
          </td>
          <td></td>
          <td>
            <% if day.finished_before_at.present? && day.finished_at.blank? %>
             <%= l(day.finished_before_at, format: :hour) %>
            <% elsif day.finished_at.present? %>
             <%= l(day.finished_at, format: :hour) %>
            <% end %>
          </td>
          <td>
            <% if day.finished_before_at.present? && day.finished_at.blank? %>
             <%= format_min(day.finished_before_at) %>
            <% elsif day.finished_at.present? %>
             <%= format_min(day.finished_at) %>
            <% end %>
          </td>
          <td></td>
          <td colspan = "4">
              <% if day.started_before_at.present? && day.finished_before_at.present? %>
              <%= str_times = working_times(day.started_before_at, day.finished_before_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <% elsif day.started_at.present? && day.finished_at.present? %>
              <%= working_times(day.started_at, day.finished_at) %>
              <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%= l(day.finished_plan_at, format: :hour) if day.finished_plan_at.present? %></td>
          <td><%= format_min(day.finished_plan_at) if day.finished_plan_at.present? %></td>
          <td colspan = "2">
             <% if day.started_at.present? && day.finished_plan_at.present? %>
              <%= over_times(day.started_at, day.finished_plan_at, @user.basic_work_time) %>
             <% elsif day.started_at.present? && day.finished_at.present? %>
              <%= over_times(day.started_at, day.finished_at, @user.basic_work_time) %>
             <% end %>
          </td>
          <td colspan = "2"><%= day.business_process_content %></td>
          <td colspan = "2">
             <% if day.mark_instructor_confirmation.present? && day.finished_plan_at.present? %>
              <%= day.instructor_confirmation %> 残業<%= day.mark_instructor_confirmation %>
             <% else %>
             
             <% end %>
             <% if day.mark_change_confirmation.present? && day.finished_at.present? %>
              <%= day.change_confirmation %> 勤怠変更<%= day.mark_change_confirmation %>
             <% else %>
               
             <% end %>
          </td>
        </tr>
       <% end %>
    </tbody>
 
  
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td></td>
        <td colspan="2"><%= @attendances.size %></td>
        <td colspan="6"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="4"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="8"></td>
        <td colspan="2">
          <% if @attendance.mark_apploval_confirmation.present? %>
            <span>所属長承認  <%= @attendance.apploval_confirmation %>【<%= @attendance.mark_apploval_confirmation %>】</span>
          <% else %>
            <span>所属長承認 【未】</span>
          <% end %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

